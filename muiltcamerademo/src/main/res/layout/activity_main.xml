<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextureView
            android:id="@+id/camera1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></TextureView>

        <TextureView
            android:id="@+id/camera2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></TextureView>

        <TextureView
            android:id="@+id/camera3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></TextureView>

        <TextureView
            android:id="@+id/camera4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></TextureView>

        <TextureView
            android:id="@+id/camera5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></TextureView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextureView
            android:id="@+id/camera6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></TextureView>

        <TextureView
            android:id="@+id/camera7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></TextureView>

        <TextureView
            android:id="@+id/camera8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></TextureView>

        <TextureView
            android:id="@+id/camera9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></TextureView>

        <TextureView
            android:id="@+id/camera10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></TextureView>
    </LinearLayout>
</LinearLayout>