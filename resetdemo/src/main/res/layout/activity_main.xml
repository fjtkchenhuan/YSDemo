<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:gravity="center_horizontal">

    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择平台"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"/>

        <RadioButton
            android:id="@+id/rk3288_7.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rk3288_7.1"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"/>
        <RadioButton
            android:id="@+id/rk3368_7.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rk3368_7.1"
            android:textSize="18sp"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="以太网复位"
            android:textSize="20sp"
            android:textColor="@color/colorAccent" />
        <EditText
            android:id="@+id/eth_website"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="请输入复位检查的网址"/>
        <Button
            android:id="@+id/set_eth_website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置复位地址"/>
        <Button
            android:id="@+id/eth_reset_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打开或关闭以太网复位"/>
        <TextView
            android:id="@+id/eth_current_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wifi复位"
            android:textSize="20sp"
            android:textColor="@color/colorAccent" />
        <EditText
            android:id="@+id/wifi_website"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="请输入复位检查的网址"/>
        <Button
            android:id="@+id/set_wifi_website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置复位地址"/>
        <Button
            android:id="@+id/wifi_reset_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打开或关闭Wifi复位"/>
        <TextView
            android:id="@+id/wifi_current_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4G复位"
            android:textSize="20sp"
            android:textColor="@color/colorAccent" />
        <EditText
            android:id="@+id/phone_website"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="请输入复位检查的网址"/>
        <Button
            android:id="@+id/set_phone_website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置复位地址"/>
        <Button
            android:id="@+id/phone_reset_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打开或关闭phone复位"/>
        <TextView
            android:id="@+id/phone_current_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <EditText
            android:id="@+id/check_net_gap"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="请输入检查时间间隔，单位：秒"/>
        <Button
            android:id="@+id/set_gap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置网络复位时间间隔"/>
        <TextView
            android:id="@+id/current_check_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USB复位"
            android:textSize="20sp"
            android:textColor="@color/colorAccent" />
        <EditText
            android:id="@+id/usb_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="请输入需要复位usb对应的索引值"
            android:layout_marginLeft="10dp"/>
        <Button
            android:id="@+id/reset_usb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="复位USB"/>
        <TextView
            android:id="@+id/reset_usb_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>